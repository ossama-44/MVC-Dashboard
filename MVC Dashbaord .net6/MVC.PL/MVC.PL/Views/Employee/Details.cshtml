@model EmployeeViewModel
@inject IDepartmentRepository DeptRepo
@{
    ViewData["Title"] = "Details";
    var Departments = new SelectList(DeptRepo.GetAll().Result, "ID", "Name");
}

<h1>Employee's Details</h1>
<br />
<br />

<div class="row mb-3">
    <div class="col-10">
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />
           </div>
            <div class="form-group">
                <label asp-for="@Model.Age" class="col-form-label"></label>
                <input asp-for="@Model.Age" class="form-control" readonly />
          </div>
            <div class="form-group">
                <label asp-for="@Model.Address" class="col-form-label"></label>
                <input asp-for="@Model.Address" class="form-control" readonly />
              </div>
            <div class="form-group">
                <label asp-for="@Model.Salary" class="col-form-label"></label>
                <input asp-for="@Model.Salary" class="form-control" readonly />
             </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" readonly />
     
            </div>
            <div class="form-group">
                <label asp-for="@Model.Department" class="col-form-label"></label>
               <input asp-for="@Model.Department.Name" class="form-control" readonly />
             </div>
            <div class="form-group">
                <label asp-for="@Model.HireDate" class="col-form-label"></label>
                <input asp-for="@Model.HireDate" class="form-control" readonly />
               </div>

            <div class="form-group form-check">
            <label class="col-form-label" asp-for="@Model.IsActive"></label>
            <input asp-for="@Model.IsActive" class="form-control" readonly />
            </div>
            <br />
            <a asp-action="Update" class="btn btn-success" asp-route-id="@Model.Id">Edit</a>
            <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>
