@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
<div class="agileits-top">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All"></div>
            <input asp-for="Email" type="hidden">
            <input asp-for="Token" type="hidden">
            <input class="text" type="password" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="@Model.Password"></span>
            <input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <span asp-validation-for="@Model.ConfirmPassword"></span>
            <input type="submit" value="RESET PASSWORD">
    </form>
</div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

