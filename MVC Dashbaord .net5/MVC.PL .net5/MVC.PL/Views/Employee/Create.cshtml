@model Employee
@*@inject IDepartmentRepository DeptRepo*@
@{
    ViewData["Title"] = "Create";
    var Departments = new SelectList(ViewBag.Departments, "ID", "Name");
}

<h1>Add New Employee</h1>
<br />
<br />

<div class="row mb-3">
    <div class="col-8">
        <form asp-action="Create" asp-controller="Employee" enctype="multipart/form-data">
            <br />
            <partial name="Partial/CreateEditViewPartial" model="@Model" />
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}