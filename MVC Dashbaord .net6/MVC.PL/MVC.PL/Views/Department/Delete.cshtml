@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Department</h1>
<br />
<br />
<h3> Are You Sure You Want To Delete This Department</h3>
<div class="row">
    <div class="col-8">
        <form asp-action="Delete" asp-controller="Department">
            <input hidden asp-for="ID" />
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-label"></label>
                <input asp-for="@Model.Code" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>
            <br />

            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>
    </div>
</div>

